---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Travel Tips">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Essential Travel Tips</h1>
    
    <div class="space-y-12">
      <section>
        <h2 class="text-2xl font-bold mb-4">Planning Your Trip</h2>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Research Peak Seasons:</strong>
                <p class="text-gray-600">Travel during shoulder season for better deals and fewer crowds.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Book in Advance:</strong>
                <p class="text-gray-600">Secure accommodations and major attractions at least 3 months ahead.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Local Transportation:</strong>
                <p class="text-gray-600">Research public transit options and download relevant apps before arrival.</p>
              </div>
            </li>
          </ul>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-4">Packing Essentials</h2>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Universal Adapter:</strong>
                <p class="text-gray-600">Essential for international travel to keep your devices charged.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>First Aid Kit:</strong>
                <p class="text-gray-600">Include basic medications, bandages, and any prescription medicines.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Weather-Appropriate Gear:</strong>
                <p class="text-gray-600">Research your destination's climate and pack accordingly.</p>
              </div>
            </li>
          </ul>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-4">Cultural Awareness</h2>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Learn Basic Phrases:</strong>
                <p class="text-gray-600">Knowing simple greetings and "thank you" in the local language goes a long way.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="text-indigo-600 mr-2">✓</span>
              <div>
                <strong>Respect Local Customs:</strong>
                <p class="text-gray-600">Research dress codes and behavioral expectations before your trip.</p>
              </div>
            </li>
          </ul>
        </div>
      </section>
    </div>
  </div>
</MainLayout>