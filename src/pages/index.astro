---
import MainLayout from '../layouts/MainLayout.astro';

const featuredPosts = [
  {
    title: "Banff National Park",
    description: "Exploring the majestic Canadian Rockies",
    image: "https://images.unsplash.com/photo-1503614472-8c93d56e92ce",
    link: "/canada/banff"
  },
  {
    title: "Niagara Falls",
    description: "Nature's raw power and beauty",
    image: "https://images.unsplash.com/photo-1489447068241-b3490214e879",
    link: "/canada/niagara"
  },
  {
    title: "Montreal",
    description: "A taste of Europe in North America",
    image: "https://images.unsplash.com/photo-1519178614-68673b201f36",
    link: "/canada/montreal"
  }
];

const upcomingDestinations = [
  {
    name: "Santorini",
    country: "Greece",
    image: "https://images.unsplash.com/photo-1613395877344-13d4a8e0d49e"
  },
  {
    name: "Kyoto",
    country: "Japan",
    image: "https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e"
  }
];
---

<MainLayout title="Home">
  <!-- Hero Section -->
  <div class="relative">
    <div class="h-[600px] bg-[url('https://images.unsplash.com/photo-1519681393784-d120267933ba')] bg-cover bg-center">
      <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
        <div class="container text-center text-white px-4">
          <h1 class="display-3 mb-4">Welcome to My Travel Adventures</h1>
          <p class="lead mb-8">Exploring Canada's natural wonders and dreaming of worldwide destinations</p>
          <div class="d-flex gap-4 justify-content-center">
            <a href="/canada" class="btn btn-indigo px-6 py-3 rounded-lg">Explore Canadian Adventures</a>
            <a href="/bucket-list" class="btn btn-outline-light px-6 py-3 rounded-lg">View Bucket List</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Posts Section -->
  <div class="container py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Recent Adventures</h2>
      <p class="text-muted mx-auto">Join me on my journey through Canada's most breathtaking destinations, from the Rocky Mountains to the vibrant cities.</p>
    </div>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {featuredPosts.map(post => (
        <div class="col">
          <a href={post.link} class="d-block text-decoration-none">
            <div class="card shadow-sm">
              <img
                src={post.image}
                alt={post.title}
                class="card-img-top"
              />
              <div class="card-body">
                <h3 class="card-title">{post.title}</h3>
                <p class="card-text">{post.description}</p>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>

  <!-- Travel Stats Section -->
  <div class="bg-indigo-50 py-16">
    <div class="container">
      <div class="row row-cols-2 row-cols-md-4 g-8 text-center">
        <div>
          <div class="text-4xl font-bold text-indigo-600 mb-2">10+</div>
          <div class="text-gray-600">Cities Explored</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-indigo-600 mb-2">5</div>
          <div class="text-gray-600">National Parks</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-indigo-600 mb-2">1000+</div>
          <div class="text-gray-600">Photos Taken</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-indigo-600 mb-2">3</div>
          <div class="text-gray-600">Provinces Visited</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Upcoming Adventures Section -->
  <div class="container py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Dream Destinations</h2>
      <p class="text-muted mx-auto">These breathtaking locations are next on my travel bucket list.</p>
    </div>
    
    <div class="row row-cols-1 row-cols-md-2 g-4">
      {upcomingDestinations.map(destination => (
        <div class="col">
          <div class="card h-100">
            <img
              src={destination.image}
              alt={destination.name}
              class="card-img-top"
            />
            <div class="card-body text-white bg-dark d-flex flex-column justify-content-end">
              <h3 class="card-title">{destination.name}</h3>
              <p class="card-text">{destination.country}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Newsletter Section -->
  <div class="bg-white py-16">
    <div class="container">
      <div class="bg-indigo-600 rounded-2xl p-8 md:p-12 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Stay Updated on My Adventures</h2>
        <p class="text-indigo-100 mb-8 max-w-2xl mx-auto">
          Subscribe to receive updates about my latest travel experiences, photography tips, and destination guides.
        </p>
        <form class="max-w-md mx-auto d-flex gap-4">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-white"
          />
          <button
            type="submit"
            class="btn btn-light text-indigo-600 px-6 py-3 rounded-lg"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Quick Links Section -->
  <div class="container py-16">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <div class="col text-center p-6">
        <h3 class="text-xl font-semibold mb-4">Travel Tips</h3>
        <p class="text-muted mb-4">Essential advice for making the most of your adventures.</p>
        <a href="/tips" class="text-indigo-600 hover:text-indigo-700">Learn More →</a>
      </div>
      <div class="col text-center p-6">
        <h3 class="text-xl font-semibold mb-4">Canadian Adventures</h3>
        <p class="text-muted mb-4">Explore the beauty of the Great White North.</p>
        <a href="/canada" class="text-indigo-600 hover:text-indigo-700">Start Exploring →</a>
      </div>
      <div class="col text-center p-6">
        <h3 class="text-xl font-semibold mb-4">About Me</h3>
        <p class="text-muted mb-4">Learn about my journey and travel philosophy.</p>
        <a href="/about" class="text-indigo-600 hover:text-indigo-700">Read More →</a>
      </div>
    </div>
  </div>
</MainLayout>
