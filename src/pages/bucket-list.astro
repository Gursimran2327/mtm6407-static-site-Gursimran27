---
import MainLayout from '../layouts/MainLayout.astro';

const dreamDestinations = [
  {
    name: "Santorini, Greece",
    image: "https://images.unsplash.com/photo-1613395877344-13d4a8e0d49e",
    description: "White-washed buildings, blue domes, and stunning sunsets over the Aegean Sea."
  },
  {
    name: "Machu Picchu, Peru",
    image: "https://images.unsplash.com/photo-1587595431973-160d0d94add1",
    description: "Ancient Incan citadel set high in the Andes Mountains."
  },
  {
    name: "Kyoto, Japan",
    image: "https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e",
    description: "Traditional temples, serene gardens, and cherry blossoms in spring."
  }
];
---

<MainLayout title="Travel Bucket List">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">My Travel Bucket List</h1>
    <p class="text-lg text-gray-700 mb-12">
      While I love exploring Canada, these are the international destinations that capture my imagination and fuel my wanderlust.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {dreamDestinations.map(destination => (
        <div class="bg-white rounded-lg overflow-hidden shadow-md">
          <img
            src={destination.image}
            alt={destination.name}
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{destination.name}</h3>
            <p class="text-gray-600">{destination.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout>