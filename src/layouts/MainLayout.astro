---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Travel Adventures</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50">
    <!-- Navbar -->
    <nav class="bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-indigo-600">Travel Adventures</a>
          </div>

          <!-- Hamburger button (mobile) -->
          <button
            id="menu-toggle"
            class="lg:hidden text-gray-700 focus:outline-none"
            aria-label="Toggle navigation"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>

          <!-- Nav Links -->
          <div
          id="nav-links"
          class="hidden flex-col items-start gap-3 lg:flex lg:flex-row lg:items-center lg:gap-8 absolute top-16 left-0 w-full bg-white px-6 py-4 shadow-md z-10 lg:static lg:w-auto lg:bg-transparent lg:shadow-none"
        >
          <a href="/" class="block text-gray-700 hover:text-indigo-600">Home</a>
          <a href="/canada" class="block text-gray-700 hover:text-indigo-600">Canadian Adventures</a>
          <a href="/bucket-list" class="block text-gray-700 hover:text-indigo-600">Bucket List</a>
          <a href="/tips" class="block text-gray-700 hover:text-indigo-600">Travel Tips</a>
          <a href="/about" class="block text-gray-700 hover:text-indigo-600">About</a>
        </div>
        
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white mt-12 py-8">
      <div class="max-w-7xl mx-auto px-4">
        <p class="text-center text-gray-500">&copy; 2024 Travel Adventures. All rights reserved.</p>
      </div>
    </footer>

    <!-- Toggle Script -->
    <script>
      const toggle = document.getElementById('menu-toggle');
      const links = document.getElementById('nav-links');

      if (toggle) {
        toggle.addEventListener('click', () => {
          if (links) {
            links.classList.toggle('hidden');
          }
        });
      }
    </script>
  </body>
</html>
